<h1>Restaurants</h1>

<small>
  <%= link_to "New Restaurant", new_restaurant_path %>
</small>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
    <li><%= restaurant.address %></li>
    <li><%= "*" * restaurant.stars %></li>
  <% end %>
</ul>


